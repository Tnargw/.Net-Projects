@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to MyScriptureJournal!</h1>
    <div class="d-flex justify-content-center align-items-center mt-5">
        <h2 class="h5 mx-3">Total Notes: @Model.NoteCount</h2>
        <h2 class="h5 mx-3">Most Recent Note Added: @Model.MostRecentNoteDate?.ToString("MMMM dd, yyyy hh:mm tt")</h2>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
    <a class="btn btn-primary" asp-area="" asp-page="/Notes/Index">MyScriptureJournal</a>
</div>

